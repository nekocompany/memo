<h1>id = <%= @memorandum.id %> のメモ詳細ページ</h1>

 <table class="table table-bordered">
    <thead>
      <tr class="active">
        <th>id</th>
        <th>メモ</th>
        <th>日時</th>
      </tr>
    </thead>
    <tbody>

        <tr>
          <td><%= @memorandum.id %></td>
          <td><%= @memorandum.content %></td>
          <td><%= @memorandum[:created_at].strftime("%Y-%m-%d_%H:%M") %></td>
        </tr>

    </tbody>
  </table>

<%= link_to 'このメッセージを編集する', edit_memorandum_path(@memorandum), class: 'btn btn-default' %>
<%= link_to 'このメッセージを削除する', @memorandum, method: :delete, data: { confirm: '本当に削除してよろしいですか？' }, class: 'btn btn-danger' %>
