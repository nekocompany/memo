<div class="row">
  <div class="col-xs-6">
    
    <%= form_for(memorandum) do |f| %>
      <% if memorandum.errors.any? %>
        <div class="alert alert-warning">
          <ul>
            <% memorandum.errors.full_messages.each do |e_msg| %>
              <li><%= e_msg %></li>
            <% end %>
          </ul>
        </div>
      <% end %>
    
      <div class="form-group">
        <%= f.label :content, 'メモ' %>
        <%= f.text_field :content, class: 'form-control' %>
      </div>
    
    
      <%= f.submit '投稿', class: 'btn btn-primary' %>
    <% end %>
  </div>
</div>